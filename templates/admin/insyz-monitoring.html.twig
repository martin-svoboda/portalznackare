{% extends 'admin.html.twig' %}

{% block title %}INSYZ Monitoring - Admin{% endblock %}

{% block body %}
<div class="page">
    <div class="page__header">
        {% include 'components/page-header.html.twig' with {
            'title': 'INSYZ Monitoring',
            'breadcrumbs': [
                {'text': 'Administrace', 'url': path('admin_dashboard')},
                {'text': 'INSYZ Monitoring'}
            ]
        } %}
    </div>

    <div class="page__content">
        <div class="card">
            <div class="card__content">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Čas</th>
                            <th>Endpoint</th>
                            <th>Metoda</th>
                            <th>Status</th>
                            <th>Doba odezvy</th>
                            <th>Chyba</th>
                            <th>Akce</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for log in logs %}
                        <tr>
                            <td>{{ log.createdAt|date('d.m.Y H:i:s') }}</td>
                            <td>{{ log.endpoint }}</td>
                            <td>{{ log.method }}</td>
                            <td>
                                <span class="badge badge--{{ log.status == 'success' ? 'success' : 'danger' }}">
                                    {{ log.status }}
                                </span>
                            </td>
                            <td>{{ log.durationMs }}ms</td>
                            <td>{{ log.errorMessage|default('-') }}</td>
                            <td>
                                <button
                                    type="button"
                                    class="btn btn--sm btn--secondary"
                                    onclick="toggleDetails({{ loop.index }})"
                                >
                                    Detaily
                                </button>
                            </td>
                        </tr>
                        <tr id="details-{{ loop.index }}" class="table__row--detail" style="display: none;">
                            <td colspan="7">
                                <div class="grid grid-cols-2 gap-4">
                                    <div>
                                        <h5 class="font-semibold mb-2">Request Parameters:</h5>
                                        <pre class="text-sm overflow-auto max-h-64"><code>{{ log.requestParams ? log.requestParams|json_encode(constant('JSON_PRETTY_PRINT') b-or constant('JSON_UNESCAPED_UNICODE')) : 'Žádná data' }}</code></pre>
                                    </div>
                                    <div>
                                        <h5 class="font-semibold mb-2">Response Summary:</h5>
                                        <pre class="text-sm overflow-auto max-h-64"><code>{{ log.responseSummary ? log.responseSummary|json_encode(constant('JSON_PRETTY_PRINT') b-or constant('JSON_UNESCAPED_UNICODE')) : 'Žádná data' }}</code></pre>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="7" class="text-center">Žádné záznamy</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
function toggleDetails(index) {
    const detailsRow = document.getElementById('details-' + index);
    if (detailsRow.style.display === 'none') {
        detailsRow.style.display = 'table-row';
    } else {
        detailsRow.style.display = 'none';
    }
}
</script>
{% endblock %}