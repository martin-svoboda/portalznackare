{% extends 'base.html.twig' %}

{% block title %}{{ pageTitle|default(sectionTitle) }} - N√°povƒõda{% endblock %}

{% block body %}
<div class="section">
    <div class="container mx-auto">
        <div class="flex gap-8">
            {# Sidebar s navigac√≠ #}
            <aside class="w-64 flex-shrink-0">
                <div class="card">
                    <div class="card__header">
                        <h2 class="card__title">
                            <a href="{{ path('help_index') }}" class="text-inherit no-underline">üìö N√°povƒõda</a>
                        </h2>
                    </div>
                    <div class="card__content p-0">
                        <nav class="nav nav--vertical">
                            {% for section in navigation %}
                                <div class="nav__section">
                                    <a href="{{ section.url }}" 
                                       class="nav__section-title {% if currentSection == section.name %}nav__section-title--active{% endif %}">
                                        <span class="nav__icon">{{ section.icon }}</span>
                                        {{ section.title }}
                                    </a>
                                    
                                    {% if section.pages and currentSection == section.name %}
                                        <ul class="nav__list">
                                            {% for page in section.pages %}
                                                <li class="nav__item">
                                                    <a href="{{ page.url }}" 
                                                       class="nav__link {% if currentPage == page.name %}nav__link--active{% endif %}">
                                                        {{ page.title }}
                                                    </a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </div>
                            {% endfor %}
                        </nav>
                    </div>
                </div>
            </aside>
            
            {# Hlavn√≠ obsah #}
            <main class="flex-1">
                <div class="card">
                    <div class="card__header">
                        {# Breadcrumb navigace #}
                        <nav class="breadcrumb">
                            <a href="{{ path('help_index') }}" class="breadcrumb__link">N√°povƒõda</a>
                            <span class="breadcrumb__separator">‚Ä∫</span>
                            {% if currentPage %}
                                <a href="{{ path('help_section', {section: currentSection}) }}" class="breadcrumb__link">
                                    {{ sectionTitle }}
                                </a>
                                <span class="breadcrumb__separator">‚Ä∫</span>
                                <span class="breadcrumb__current">{{ pageTitle }}</span>
                            {% else %}
                                <span class="breadcrumb__current">{{ sectionTitle }}</span>
                            {% endif %}
                        </nav>
                        
                        <h1 class="page-title">{{ pageTitle|default(sectionTitle) }}</h1>
                    </div>
                    <div class="card__content">
                        <div class="content">
                            {{ content|raw }}
                        </div>
                        
                        {# Navigace na dal≈°√≠/p≈ôedchoz√≠ str√°nku #}
                        {% if navigation[currentSection] is defined and navigation[currentSection].pages %}
                            {% set pages = navigation[currentSection].pages %}
                            {% set currentIndex = null %}
                            
                            {% for i, page in pages %}
                                {% if page.name == currentPage %}
                                    {% set currentIndex = i %}
                                {% endif %}
                            {% endfor %}
                            
                            {% if currentIndex is not null %}
                                <div class="page-navigation">
                                    {% if currentIndex > 0 %}
                                        <a href="{{ pages[currentIndex - 1].url }}" class="page-navigation__prev">
                                            ‚Üê {{ pages[currentIndex - 1].title }}
                                        </a>
                                    {% endif %}
                                    
                                    {% if currentIndex < pages|length - 1 %}
                                        <a href="{{ pages[currentIndex + 1].url }}" class="page-navigation__next">
                                            {{ pages[currentIndex + 1].title }} ‚Üí
                                        </a>
                                    {% endif %}
                                </div>
                            {% endif %}
                        {% endif %}
                    </div>
                </div>
                
                {# Zpƒõtn√° vazba #}
                <div class="card mt-6">
                    <div class="card__content text-center">
                        <p class="text--muted">
                            Pomohla v√°m tato str√°nka? Nƒõco nen√≠ jasn√©?
                        </p>
                        <p>
                            <a href="mailto:support@kct.cz?subject=N√°povƒõda: {{ pageTitle|default(sectionTitle) }}" 
                               class="btn btn--secondary btn--sm">
                                Napi≈°te n√°m
                            </a>
                        </p>
                    </div>
                </div>
            </main>
        </div>
    </div>
</div>
{% endblock %}