{#
  Action Card Component
  
  Parameters:
  - title: Card title (required)
  - description: Card description (optional)
  - icon: SVG icon content (optional)
  - url: Link URL (optional)
  - button_text: Button text (default: 'Zobrazit')
  - button_class: Button CSS class (default: 'btn btn--primary btn--full')
  - variant: 'primary', 'secondary' (default: 'primary')
#}

{% set cardClass = 'action-card' %}
{% if variant is defined and variant %}
    {% set cardClass = cardClass ~ ' action-card--' ~ variant %}
{% endif %}

<div class="{{ cardClass }}">
    {% if icon is defined and icon %}
        <svg class="action-card__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            {{ icon|raw }}
        </svg>
    {% endif %}
    
    <h3 class="action-card__title">{{ title }}</h3>
    
    {% if description is defined and description %}
        <p class="action-card__description">{{ description }}</p>
    {% endif %}
    
    {% if url is defined and url %}
        <a href="{{ url }}" class="{{ button_class|default('btn btn--primary btn--full mt-4') }}">
            {{ button_text|default('Zobrazit') }}
        </a>
    {% endif %}
</div>