{% extends 'base.html.twig' %}

{% block title %}Metodika značení - Portál značkaře{% endblock %}

{% block body %}
    <div class="container container--xl">
        {% include 'components/page-header.html.twig' with {
            title: 'Metodika značení',
            subtitle: 'Šablona připravená pro obsah metodiky.',
            breadcrumbs: [
                {
                    url: path('app_index'),
                    text: 'Úvod'
                },
                {
                    text: 'Metodika'
                }
            ]
        } %}

        {% include 'components/alert.html.twig' with {
            type: 'info',
            title: 'Poznámka k implementaci',
            message: 'Tato stránka je připravena pro budoucí implementaci metodiky značení. Obsah bude spravován přes administrační rozhraní.'
        } %}

        <div class="mt-6" style="display: grid; grid-template-columns: 250px 1fr; gap: 2rem;">
            <!-- Sidebar navigace -->
            <nav class="card">
                <h4>Obsah metodiky</h4>
                <div class="flex flex-col gap-2">
                    <a href="#uvod" class="nav-link">Připraveno</a>
                </div>
            </nav>

            <!-- Hlavní obsah -->
            <main class="card">
                <section id="uvod">
                    <h2>Připraveno pro obsah</h2>
                    <p>
                        Šablona připravená pro obsah metodiky
                    </p>
                </section>
            </main>
        </div>
    </div>

    <script>
        // Smooth scrolling pro kotvy
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
{% endblock %}