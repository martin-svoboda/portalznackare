{% extends 'base.html.twig' %}

{% block title %}Stránka nenalezena - Portál značkaře{% endblock %}

{% block body %}
    <div class="container container--sm">
        <div class="card text-center">
            <div class="card__content">
                {{ tabler_icon('search', 80, 'mx-auto mb-8 text-gray-400') }}
                
                <h1 class="text-6xl font-bold mb-4 text-gray-900 dark:text-gray-100">404</h1>
                <h2 class="text-2xl font-semibold mb-4 text-gray-700 dark:text-gray-300">Stránka nenalezena</h2>
                
                <p class="mb-8 text-gray-600 dark:text-gray-400 leading-relaxed">
                    Požadovaná stránka neexistuje nebo byla přesunuta. 
                    Zkontrolujte prosím adresu URL nebo použijte navigaci pro návrat na hlavní stránku.
                </p>
                
                <div class="flex gap-4 justify-center flex-wrap">
                    <a href="{{ path('app_index') }}" class="btn btn--primary">
                        {{ tabler_icon('home', 16, 'btn__icon') }}
                        Úvodní stránka
                    </a>
                    
                    {% if app.user %}
                        <a href="{{ path('app_dashboard') }}" class="btn btn--secondary">
                            {{ tabler_icon('dashboard', 16, 'btn__icon') }}
                            Nástěnka
                        </a>
                    {% endif %}
                    
                    <button onclick="history.back()" class="btn btn--secondary">
                        {{ tabler_icon('arrow-left', 16, 'btn__icon') }}
                        Zpět
                    </button>
                </div>
            </div>
        </div>
        
        <div class="card mt-8 text-left">
            <div class="card__header">
                <h3 class="card__title">Užitečné odkazy</h3>
            </div>
            <div class="card__content">
                <div class="grid grid-gap-sm">
                    <a href="{{ path('app_metodika') }}" class="nav-link">
                        {{ tabler_icon('book') }}
                        Metodika značení
                    </a>
                    <a href="{{ path('app_downloads') }}" class="nav-link">
                        {{ tabler_icon('download') }}
                        Ke stažení
                    </a>
                    {% if app.user %}
                        <a href="{{ path('app_prikazy') }}" class="nav-link">
                            {{ tabler_icon('clipboard-list') }}
                            Moje příkazy
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}