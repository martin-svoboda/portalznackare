{% extends 'base.html.twig' %}

{% block title %}Stránka nenalezena - Portál značkaře{% endblock %}

{% block body %}
    <div class="container container--sm">
        <div class="card text-center">
            <div class="card__content">
                <svg class="mx-auto mb-8 text-gray-400" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <circle cx="11" cy="11" r="8"/>
                    <path d="M21 21l-4.35-4.35"/>
                </svg>
                
                <h1 class="text-6xl font-bold mb-4 text-gray-900 dark:text-gray-100">404</h1>
                <h2 class="text-2xl font-semibold mb-4 text-gray-700 dark:text-gray-300">Stránka nenalezena</h2>
                
                <p class="mb-8 text-gray-600 dark:text-gray-400 leading-relaxed">
                    Požadovaná stránka neexistuje nebo byla přesunuta. 
                    Zkontrolujte prosím adresu URL nebo použijte navigaci pro návrat na hlavní stránku.
                </p>
                
                <div class="flex gap-4 justify-center flex-wrap">
                    <a href="{{ path('app_index') }}" class="btn btn--primary">
                        <svg class="btn__icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                            <polyline points="9,22 9,12 15,12 15,22"/>
                        </svg>
                        Úvodní stránka
                    </a>
                    
                    {% if app.user %}
                        <a href="{{ path('app_dashboard') }}" class="btn btn--secondary">
                            <svg class="btn__icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                                <path d="M9 9h6v6H9z"/>
                            </svg>
                            Nástěnka
                        </a>
                    {% endif %}
                    
                    <button onclick="history.back()" class="btn btn--secondary">
                        <svg class="btn__icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <path d="M19 12H5"/>
                            <path d="M12 19l-7-7 7-7"/>
                        </svg>
                        Zpět
                    </button>
                </div>
            </div>
        </div>
        
        <div class="card mt-8 text-left">
            <div class="card__header">
                <h3 class="card__title">Užitečné odkazy</h3>
            </div>
            <div class="card__content">
                <div class="grid-layout grid-layout--gap-sm">
                    <a href="{{ path('app_metodika') }}" class="nav-link">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                            <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
                        </svg>
                        Metodika značení
                    </a>
                    <a href="{{ path('app_downloads') }}" class="nav-link">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                            <polyline points="7,10 12,15 17,10"/>
                            <line x1="12" y1="15" x2="12" y2="3"/>
                        </svg>
                        Ke stažení
                    </a>
                    {% if app.user %}
                        <a href="{{ path('app_prikazy') }}" class="nav-link">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                <path d="M9 11l3 3L22 4"/>
                                <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/>
                            </svg>
                            Moje příkazy
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}