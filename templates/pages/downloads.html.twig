{% extends 'base.html.twig' %}

{% block title %}Ke stažení - Portál značkaře{% endblock %}

{% block body %}
    <div class="container container--lg">
        {% include 'components/page-header.html.twig' with {
            title: 'Ke stažení',
            subtitle: 'Dokumenty, formuláře a materiály ke stažení.',
            breadcrumbs: [
                {
                    url: path('app_index'),
                    text: 'Úvod'
                },
                {
                    text: 'Ke stažení'
                }
            ]
        } %}

        {% include 'components/alert.html.twig' with {
            type: 'info',
            title: 'Poznámka k implementaci',
            message: 'Tato stránka je připravena pro budoucí implementaci systému správy souborů. Soubory budou ukládány a spravovány přes administrační rozhraní.'
        } %}

        <div class="grid mt-6">
            <div class="card">
                <div class="card__header">
                    <h3 class="card__title">Formuláře a dokumenty</h3>
                </div>
                <div class="card__content">
                    <div class="grid">
                        <div class="download-item">
                            <div class="download-item__info">
                                <h4 class="download-item__title">Soubor ke stažení</h4>
                                <p class="download-item__desc">Informace o souboru ke stažení</p>
                            </div>
                            <a href="#" class="btn btn--primary" onclick="alert('Soubor bude k dispozici po implementaci')">
                                {{ tabler_icon('download', 16, 'btn__icon') }}
                                Stáhnout
                            </a>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}