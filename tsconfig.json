{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ES6"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "jsx": "react-jsx",
        "baseUrl": "./assets",
        "paths": {
            "@/*": ["./js/*"],
            "@components/*": ["./js/components/*"],
            "@services/*": ["./js/services/*"],
            "@utils/*": ["./js/utils/*"],
            "@hooks/*": ["./js/hooks/*"],
            "@contexts/*": ["./js/contexts/*"],
            "@types/*": ["./types/*"]
        }
    },
    "include": ["assets/js/**/*", "assets/types/**/*"],
    "exclude": ["node_modules", "public/build", "vendor", "var",
      "WP-src/portal/**/*"
    ]
}
